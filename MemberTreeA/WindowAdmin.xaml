<?xml version="1.0" encoding="utf-8"?>
<UserControl 
	x:Class="MemberTree.WindowAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:my="clr-namespace:MemberTree"
	xmlns:my1="clr-namespace:MemberTree;assembly=MemberTree">
	<UserControl.Resources>
		<Style TargetType="Button">
			<Setter Property="Margin" Value="5"></Setter>
			<Setter Property="Padding" Value="5" />
		</Style>
		<Style TargetType="ComboBox">
			<Setter Property="Margin" Value="2"></Setter>
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<GroupBox Margin="5,0" Name="grpboxTree">
			<GroupBox.Header>
				<TextBlock FontWeight="Bold" FontSize="15" Text="会员关系树数据集管理"/>
			</GroupBox.Header>
			<my:AdminDataSet x:Name="adminDataset"/>
		</GroupBox>
		<GroupBox Grid.Column="2" Grid.RowSpan="3" x:Name="grpboxUser">
			<GroupBox.Header>
				<TextBlock FontWeight="Bold" FontSize="15" Text="用户客户端管理"/>
			</GroupBox.Header>
			<my:AdminUser x:Name="adminUser" />
		</GroupBox>
		<my1:ProgressView x:Name="progressView" Grid.ColumnSpan="2" Visibility="Hidden"/>
		<my1:MyStatusBar Grid.Row="1" Grid.ColumnSpan="2" x:Name="myStatusBar"/>
	</Grid>
</UserControl>