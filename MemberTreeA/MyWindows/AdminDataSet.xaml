<UserControl x:Class="MemberTree.AdminDataSet"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:my="clr-namespace:MemberTree"
	xmlns:my1="clr-namespace:MemberTree;assembly=MemberTree">
	<UserControl.Resources>
		<Style TargetType="Button">
			<Setter Property="Margin" Value="2" />
			<Setter Property="Padding" Value="2" />
		</Style>
		<Style TargetType="ComboBox">
			<Setter Property="Margin" Value="2" />
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<ToolBar ToolBarTray.IsLocked="True">
			<GroupBox Header="数据选项">
				<StackPanel Orientation="Horizontal">
					<ComboBox Name="comboToLower">
						<ComboBoxItem IsSelected="True">不转换大小写</ComboBoxItem>
						<ComboBoxItem>转换为小写</ComboBoxItem>
						<ComboBoxItem>转换为大写</ComboBoxItem>
					</ComboBox>
					<ComboBox Name="comboToHalf">
						<ComboBoxItem IsSelected="True">不转换全半角</ComboBoxItem>
						<ComboBoxItem>转换为半角</ComboBoxItem>
						<ComboBoxItem>转换为全角</ComboBoxItem>
					</ComboBox>
					<ComboBox Name="comboTrim">
						<ComboBoxItem IsSelected="True">不删除空格</ComboBoxItem>
						<ComboBoxItem>删除首尾空格</ComboBoxItem>
						<ComboBoxItem>删除首部空格</ComboBoxItem>
						<ComboBoxItem>删除尾部空格</ComboBoxItem>
					</ComboBox>
				</StackPanel>
			</GroupBox>
			<GroupBox Header="直连数据库">
				<StackPanel Orientation="Horizontal">
					<Button Content="Sqlserver导出csv" Click="ButtonSqlServer2CSV_Click" />
					<Button Content="直连Mysql" Click="ButtonConnectMysql_Click" />
				</StackPanel>
			</GroupBox>
			<GroupBox Header="打开文件">
				<StackPanel Orientation="Horizontal">
					<Button Content="检查csv文件" Click="ButtonCheck_Click"/>
					<Button Content="打开csv文件" Click="ButtonOpen_Click" />
					<Button Content="打开tab文件" Click="ButtonOpen_Click" />
				</StackPanel>
			</GroupBox>
			<GroupBox Header="数据集管理">
				<Button Content="删除选中的数据集" Click="ButtonDelete_Click" />
			</GroupBox>
			<GroupBox Header="关于">
				<Button Content="关于本程序" Click="BtnAbout_Click"/>
			</GroupBox>
		</ToolBar>
		<my1:DatasetListView Grid.Row="1" x:Name="datasetListView" />
		<my1:DatasetInfoView Grid.Row="2" x:Name="datasetInfoView"/>
	</Grid>
</UserControl>