<Window x:Class="SoftUnRegister.Window1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="网络传销会员层级分析系统" 
    WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
    Height="200" Width="300">
	<GroupBox Header="注册信息清理工具" Margin="10">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="2*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Button x:Name="btnClear" Margin="30,25" Content="清空本机注册信息" FontSize="16" Click="BtnClearReg_Click"/>
			<TextBlock x:Name="txtMsg" Margin="5" Grid.Row="1" FontSize="16" Foreground="Red"/>
		</Grid>
	</GroupBox>
</Window>