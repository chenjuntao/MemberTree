<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="MemberTree.MyNodeList" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="500">
	<ListView
		Name="nodeList">
		<ListView.View>
			<GridView>
				<GridViewColumn
					Header="会员ID"
					DisplayMemberBinding="{Binding Path=SysId}" />
				<GridViewColumn
					Header="会员名字"
					DisplayMemberBinding="{Binding Path=Name}" />
				<GridViewColumn
					Header="所在级别"
					DisplayMemberBinding="{Binding Path=Level}" />
				<GridViewColumn
					Header="父节点ID"
					DisplayMemberBinding="{Binding Path=TopId}" />
				<GridViewColumn
					Header="下线人数"
					DisplayMemberBinding="{Binding Path=ChildrenCount}" />
				<GridViewColumn
					Header="下线层数"
					DisplayMemberBinding="{Binding Path=ChildrenLevels}" />
				<GridViewColumn
					Header="所在行数"
					DisplayMemberBinding="{Binding Path=LineCount}" />
			</GridView>
		</ListView.View>
	</ListView>
</UserControl>