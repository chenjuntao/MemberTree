<UserControl x:Class="MemberTree.MyGraphView" xmlns:tc="clr-namespace:TreeContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="500" >
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" x:Name="ScrollViewer">
            <tc:TreeContainer x:Name="memberTreeView" HorizontalAlignment="Center" VerticalAlignment="Center">
            </tc:TreeContainer>
        </ScrollViewer>
        <CheckBox x:Name="isAutoExpand" Content="鼠标经过节点时自动展开节点" Margin="10" VerticalAlignment="Bottom" />
    </Grid>
        
</UserControl>
