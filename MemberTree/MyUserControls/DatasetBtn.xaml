<UserControl x:Class="MemberTree.DatasetBtn"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Azure" BorderBrush="Black" BorderThickness="1" 
    Width="200" Height="66" Margin="5" >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="6*"/>
			<RowDefinition Height="5*"/>
			<RowDefinition Height="5*"/>
			<RowDefinition Height="3*"/>
		</Grid.RowDefinitions>
	
		<TextBlock x:Name="dsName" Text="数据集名称" FontWeight="Bold" FontSize="15" Foreground="Maroon"/>
	
		<TextBlock Grid.Row="1">
			<TextBlock Text="共" />
			<TextBlock x:Name="dsCol" />
			<TextBlock Text="列，" />
			<TextBlock x:Name="dsRow" />
			<TextBlock Text="条数据" />
		</TextBlock>
		
		<ProgressBar x:Name="dsSize" Grid.Row="3" />
		
		<TextBlock Grid.Row="2">
			<TextBlock Text="创建时间：" />
			<TextBlock x:Name="dsCrateDate" />
		</TextBlock>
	
	</Grid>
</UserControl>